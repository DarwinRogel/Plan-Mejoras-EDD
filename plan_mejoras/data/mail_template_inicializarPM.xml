<odoo>
    <data noupdate="1">
        <!--Email template -->
        <record id="email_template_inicializarPM" model="mail.template">
            <field name="name">Inicializar Plan Mejoras</field>
            <field name="model_id" ref="plan_mejoras.model_res_users"/>
            <field name="email_from">${(object.company_id.email | safe)}</field>
            <!--<field name="email_to" >${}</field>-->
            <field name="subject">Inicio del Plan Mejoas</field>
            <field name="auto_delete" eval="True"/>
            <field name="lang">${object.lang}</field>
            <field name="body_html"><![CDATA[
                <p>Hola</p>
                <br/>
                <p>Plan Mejoras Va a Inicializar</p>
                <br/>
            ]]>
            </field>
        </record>
    </data>

    <data noupdate="1">
        <!--Email template -->
        <record id="email_template_tarea" model="mail.template">
            <field name="name">Notificación de Tarea</field>
            <field name="model_id" ref="plan_mejoras.model_pm_tarea"/>
            <field name="email_from">${(object.user_id.company_id.email | safe)}</field>
            <!--<field name="email_to" >${}</field>-->
            <field name="subject">CONTROL DEL CRONOGRAMA DE TAREAS PLAN MEJORAS EDD</field>
            <field name="auto_delete" eval="True"/>
            <field name="lang">${object.lang}</field>
            <field name="body_html"><![CDATA[
                <p>Estimado ${(object.user_id.name)}</p>
                <br/>
                <p>La tarea "${(object.name)}", esta a punto de culminar, por favor revisar sus tareas.</p>
                <br/>
            ]]>
            </field>
        </record>
    </data>

    <data noupdate="1">
        <!--Email template -->
        <record id="email_template_tarea_expirada" model="mail.template">
            <field name="name">Notificación de Tarea Expirada</field>
            <field name="model_id" ref="plan_mejoras.model_pm_tarea"/>
            <field name="email_from">${(object.user_id.company_id.email | safe)}</field>
            <!--<field name="email_to" >${}</field>-->
            <field name="subject">CONTROL DEL EXPIRACION DE TAREAS PLAN MEJORAS EDD</field>
            <field name="auto_delete" eval="True"/>
            <field name="lang">${object.lang}</field>
            <field name="body_html"><![CDATA[
                <p>Estimado ${(object.user_id.name)}</p>
                <br/>
                <p>La tarea "${(object.name)}", Ha expirado, se le recomienda ponerse en contacto con el Gestor de la
                CIS\C para Justificar la misma</p>
                <br/>
            ]]>
            </field>
        </record>
    </data>

    <data noupdate="1">
        <!--Email template -->
        <record id="email_template_tarea_ponderada" model="mail.template">
