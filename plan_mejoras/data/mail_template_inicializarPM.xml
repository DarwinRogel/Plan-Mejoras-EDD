<odoo>
    <data noupdate="1">
        <!--Email template -->
        <record id="email_template_inicializarPM" model="mail.template">
            <field name="name">Inicializar Plan Mejoras</field>
            <field name="model_id" ref="plan_mejoras.model_res_users"/>
            <field name="email_from">${(object.company_id.email | safe)}</field>
            <!--<field name="email_to" >${}</field>-->
            <field name="subject">INICIALIZACIÓN DEL PLAN MEJORAS DE LA EVALUACIÓN AL DESEMPEÑO DOCENTE</field>
            <field name="auto_delete" eval="True"/>
            <field name="lang">${object.lang}</field>
            <field name="body_html"><![CDATA[
                <p>Estimado <b>${object.name},</b></p>
                <br/>
                <p>El Plan Mejoras de la Evaluación al desempeño Docente acaba de Inicializar.
                Por favor, revise su planificación en el módulo del Plan Mejoras dentro del Sistema Odoo ERP.</p>
                <br/>
                <p>Saludos cordiales.</p>
                <br/>
                <p><b>${object.company_id.name}<b/> </p>
                <p><b>Correo:</b> ${object.company_id.email}</p>
                <p><b>Teléfono:</b> ${(object.company_id.phone)}</p>
                <p><b>Dirección:</b> ${(object.company_id.street)}”</p>
                <p><b>Sitio Web:</b> ${(object.company_id.website)}”</p>
                <p><img src=" data:image/png;base64, ${object.company_id.logo}" height="100px" width="100px"/></p>

            ]]>
            </field>
        </record>
    </data>

